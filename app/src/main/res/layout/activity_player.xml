<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Player">

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="130dp" />

    <ImageView
        android:id="@+id/btPlay"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        app:srcCompat="@android:drawable/ic_media_pause" />

    <ImageView
        android:id="@+id/btFB"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/btPlay"
        android:layout_toStartOf="@+id/btPlay"
        app:srcCompat="@android:drawable/ic_media_rew" />

    <ImageView
        android:id="@+id/btPv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/btPlay"
        android:layout_toStartOf="@+id/btFB"
        app:srcCompat="@android:drawable/ic_media_previous" />

    <ImageView
        android:id="@+id/btFF"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/btPlay"
        android:layout_toEndOf="@+id/btPlay"
        app:srcCompat="@android:drawable/ic_media_ff" />

    <ImageView
        android:id="@+id/btNxt"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/btPlay"
        android:layout_toEndOf="@+id/btFF"
        app:srcCompat="@android:drawable/ic_media_next" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <ImageView
        android:id="@+id/btReplay"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="161dp"
        app:srcCompat="@android:drawable/ic_menu_rotate" />

    <TextView
        android:id="@+id/tvRT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btReplay"
        android:layout_alignParentEnd="true"
        android:paddingRight="12dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btReplay"
        android:layout_alignParentStart="true"
        android:paddingLeft="12dp"
        android:text="TextView" />


</RelativeLayout>