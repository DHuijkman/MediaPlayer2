<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">




    <RelativeLayout
        android:id="@+id/dialog_group"
        android:elevation="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_title"
            android:textSize="30sp"
            android:gravity="center"
            android:text="Test results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/dialog_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tests_and_sets_group"
        android:layout_below="@+id/dialog_group"
        android:paddingTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/tests_run_group"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tests_run_title"
                android:text="Tests executed:"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tests_run_amount"
                android:text="placeholder"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_below="@id/tests_run_title"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sets_run_group"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sets_run_title"
                android:text="Sets executed:"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sets_run_amount"
                android:text="placeholder"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_below="@id/sets_run_title"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/progress_group"
        android:paddingTop="24dp"
        android:layout_below="@+id/tests_and_sets_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tests_passed_text"
            android:layout_centerHorizontal="true"
            android:text="tests passed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"/>

        <RelativeLayout
            android:id="@+id/progress_bar_group"
            android:layout_below="@+id/tests_passed_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:id="@+id/progress_bar"
                android:layout_height="35dp"/>
            <TextView
                android:text="TextView"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress_percentage"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/test_count_down"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/progress_bar_group"
            android:textAllCaps="true"
            android:textStyle="bold"/>



    </RelativeLayout>

    <View
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        android:layout_centerVertical="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/middle"
        >
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/test_error_result_text"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:padding="3dp"/>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>

